<link  href="https://cdn.rawgit.com/fengyuanchen/cropper/v1.0.0/dist/cropper.min.css" rel="stylesheet">
<script src="https://cdn.rawgit.com/fengyuanchen/cropper/v1.0.0/dist/cropper.min.js"></script>

<h2>Upload Image</h2>

<form method="post" action="{{ path('saveImage') }}" enctype="multipart/form-data">
    <div class="crop-image"></div>
    <input type="hidden" name="image">
    <span class="btn btn-danger btn-file">
        <input type="file" name="file">
    </span>
    <input type="submit" class="btn btn-primary" value="Upload">
</form>

<script>
    $(function() {
        var $container = $('.crop-image');
        var $img;
        $('input:file').change(function(){
            var reader = new FileReader();
            $container.html('');
            reader.onload = function (e) {
                $img = $('<img>').attr('src', e.target.result).appendTo($container);
                $img.cropper({
                    movable: false,
                    zoomable: false
                });
            }

            reader.readAsDataURL(this.files[0]);
        });

        $('form').submit(function() {
            $(this).find(':hidden').val($img.cropper('getCroppedCanvas').toDataURL());
        });
    });
</script>

<style>
    .crop-image {
        max-height: 600px;
        margin: 10px 0;
    }
</style>
