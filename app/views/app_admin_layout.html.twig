{% extends 'admin_layout.html.twig' %}
{% block menu %}
    <div class="page-container row">
    <!-- BEGIN SIDEBAR -->
    <div class="page-sidebar" id="main-menu">
        <!-- BEGIN MINI-PROFILE -->
        <div class="page-sidebar-wrapper scrollbar-dynamic" id="main-menu-wrapper">
            <div class="user-info-wrapper">
                <div class="user-info">
                    <div class="greeting">Welcome to Dashboard</div>
                </div>
            </div>
            <!-- END MINI-PROFILE -->
            <!-- BEGIN SIDEBAR MENU -->
            <p class="menu-title">BROWSE <span class="pull-right"><a href="javascript:;"><i class="fa fa-refresh"></i></a></span></p>
            <ul>
                <li class=""> <a href="{{ path('posts') }}"> <i class="fa fa-file-text"></i> <span class="title">Posts</span></a></li>
                {% if 'ADMIN' in user.getRoles %}
                    <li class=""> <a href="{{ path('categories') }}"> <i class="fa fa-tags"></i> <span class="title">Categories</span></a></li>
                    <li class=""> <a href="{{ path('users') }}"> <i class="fa fa-users"></i> <span class="title">Users</span></a></li>
                    <li class=""> <a href="{{ path('roles') }}"> <i class="fa fa-unlock-alt"></i> <span class="title">Roles</span></a></li>
                    <li class=""> <a href="{{ path('menuList') }}"> <i class="fa fa-wrench"></i> <span class="title">Menus</span></a></li>
                {% endif %}
            </ul>
            <div class="clearfix"></div>
            <!-- END SIDEBAR MENU -->
        </div>
    </div>
    <a href="#" class="scrollup">Scroll</a>

    <!-- END SIDEBAR -->
    <div class="page-content">
    <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <div id="portlet-config" class="modal hide">
        <div class="modal-header">
            <button data-dismiss="modal" class="close" type="button"></button>
            <h3>Widget Settings</h3>

        </div>
        <div class="modal-body">Widget settings form goes here</div>
    </div>
    <div class="clearfix"></div>
    <div class="content">
    <ul class="breadcrumb">
        <li>
            <p>YOU ARE HERE</p>
        </li>
        <li><a href="#" class="active">{% block breadcrumb %}{% endblock %}</a>

        </li>
    </ul>
    {% block back_to %}
    {% endblock %}
    <div class="row">
    <div class="col-md-12">
    <div class="grid simple ">
    <div class="grid-title no-border">
        <h4>{% block content_title %}{% endblock %}</h4>
        <div class="tools">	<a href="javascript:;" class="collapse"></a>
            <a href="#grid-config" data-toggle="modal" class="config"></a>
            <a href="javascript:;" class="reload"></a>
            <a href="javascript:;" class="remove"></a>
        </div>
    </div>
    <div class="grid-body no-border">
    {% block body %}

    {% endblock %}
    </div>
    </div>
    </div>
    </div>
    </div>
        <!-- END PAGE -->
    </div>
    </div>
{% endblock %}